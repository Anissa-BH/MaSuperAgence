{% extends 'base.html.twig' %}

{% block body %}

    <div class="container mt-4">
    <h2>Editer le Bien</h2>
    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-4">{{ form_row(form.title) }}</div>
        <div class="col-md-4">{{ form_row(form.surface) }}</div>
        <div class="col-md-4">{{ form_row(form.price) }}</div>
    </div>

    <div class="row">
        <div class="col-md-3">{{ form_row(form.rooms) }}</div>
        <div class="col-md-3">{{ form_row(form.bedRooms) }}</div>
        <div class="col-md-3">{{ form_row(form.heat) }}</div>
        <div class="col-md-3">{{ form_row(form.floor) }}</div>
    </div>  
    
    <div class="row">
        <div class="col-md-5">{{ form_row(form.adress) }}</div>
        <div class="col-md-3">{{ form_row(form.city) }}</div>
        <div class="col-md-3">{{ form_row(form.postal_code) }}</div>
        <div class="col-md-1">{{ form_row(form.sold) }}</div>
    </div> 
        {{ form_widget(form) }}
        <button class="btn btn-primary">Editer</button>
    {{ form_end(form) }}
    </div>

{% endblock %}

